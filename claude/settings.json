{
    "env": {
        "IS_DEMO": "TRUE"
    },
    "attribution": {
        "commit": "",
        "pr": ""
    },
    "permissions": {
        "allow": [
            "mcp__plugin_context7_context7__*",
            "Bash(find:*)",
            "Bash(rg:*)",
            "Bash(grep:*)",
            "Bash(ls:*)",
            "WebFetch",
            "WebSearch"
        ],
        "deny": [
            "Read(./.env)",
            "Read(./.env.local)",
            "Read(./secrets/**)",
            "Bash(sudo:*)",
            "Bash(rm -rf:*)",
            "Read(id_rsa)",
            "Read(id_ed25519)",
            "Read(**/*key*)",
            "Read(**/*.ssh/**)",
            "Write(**/*secrets/**)",
            "Write(**/*.ssh/**)"
        ],
        "ask": ["Bash(rm:*)", "Bash(curl:*)", "Bash(chmod +x:*)"]
    },
    "statusLine": {
        "type": "command",
        "command": "~/.claude/statusline.sh"
    },
    "enabledPlugins": {
        "frontend-design@claude-plugins-official": true,
        "context7@claude-plugins-official": true,
        "code-review@claude-plugins-official": true,
        "typescript-lsp@claude-plugins-official": true,
        "feature-dev@claude-plugins-official": true,
        "commit-commands@claude-plugins-official": true
    },
    "plansDirectory": "./docs/plans",
    "language": "Japanese",
    "spinnerVerbs": {
        "mode": "replace",
        "verbs": ["ざわ…ざわ", "ざわざわ", "ざわ"]
    }
}
